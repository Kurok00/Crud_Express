<!-- index.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Ecommerce Website</title>
  <style>
    /* Thêm CSS đơn giản ở đây */
    .product {
      border: 1px solid #ccc;
      padding: 10px;
      text-align: center;
    }
  </style>
</head>
<body>
  <h1>Welcome to our Ecommerce Website</h1>
  <div>
    <% products.forEach(product => { %>
      <div class="product">
        <img src="<%= product.image %>" alt="<%= product.name %>" width="200">
        <h3><%= product.name %></h3>
        <p>Price: $<%= product.price %></p>
        <a href="/product/<%= product._id %>">View Product</a>
      </div>
    <% }) %>
  </div>
</body>
</html>